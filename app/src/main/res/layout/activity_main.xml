<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvFormulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="@string/formulario"
            android:paddingStart="55dp"
            android:paddingEnd="30sp"
            android:textSize="60sp">

        </TextView>

        <EditText
            android:id="@+id/editarNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:hint="@string/nombre">

        </EditText>

        <EditText
            android:id="@+id/editarApe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:hint="@string/apellido"
            android:autofillHints="@string/apellido">

        </EditText>

        <EditText
            android:id="@+id/editarEdad"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:hint="@string/edad"
            android:autofillHints="@string/edad">

        </EditText>

        <EditText
            android:id="@+id/editarCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:hint="@string/ciudad"
            android:autofillHints="@string/ciudad">

        </EditText>

        <EditText
            android:id="@+id/editarBarrio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:hint="@string/barrio"
            android:autofillHints="@string/barrio">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_marginTop="50dp" >


        <Button
            android:id="@+id/btnGuardar"
            android:text="@string/guardar"
            android:layout_width="8dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            tools:ignore="NestedWeights">

        </Button>

        <Button
            android:id="@+id/btnBorrar"
            android:text="@string/borrar"
            android:layout_width="8dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="36sp">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnNueva"
            android:layout_width="117dp"
            android:layout_height="83dp"
            android:text="@string/nueva">

        </Button>

        <TextView
            android:id="@+id/estadoCV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estadoCV"
            android:textSize="24sp">
        </TextView>
    </LinearLayout>


</LinearLayout>